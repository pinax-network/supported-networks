{
  "$id": "https://thegraph.com/TheGraphNetworkRegistry.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "The Graph networks registry",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 10,
      "format": "uri",
      "description": "Reference to this schema file"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Description of the registry"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of the registry"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time of the last update"
    },
    "networks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Network"
      },
      "description": "List of networks"
    }
  },
  "required": ["networks", "description", "updatedAt", "version", "$schema"],
  "additionalProperties": false,
  "$defs": {
    "Network": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(?!-)[a-z0-9-]{3,}(?<!-)$",
          "description": "Established name of the chain on the Graph network, i.e. mainnet, btc, arweave-mainnet, near-testnet"
        },
        "shortName": {
          "type": "string",
          "description": "Short display name of the network, i.e. Ethereum, BNB"
        },
        "fullName": {
          "type": "string",
          "description": "Display name of the network, i.e. Ethereum Mainnet, Bitcoin Testnet"
        },
        "caip2Id": {
          "type": "string",
          "pattern": "^[-a-z0-9]{3,8}:[-_a-zA-Z0-9]{1,32}$",
          "description": "CAIP-2 Chain ID, i.e. eip155:1, bip122:000000000019d6689c085ae165831e93"
        },
        "aliases": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "description": "[optional] List of possible aliases for the chain id, i.e. ethereum, eth, mainnet, eth-mainnet"
        },
        "networkType": {
          "type": "string",
          "enum": [
            "mainnet",
            "testnet",
            "devnet"
          ],
          "description": "Whether the chain is a mainnet/testnet/devnet"
        },
        "relations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "kind": {
                "type": "string",
                "enum": [
                  "testnetOf",
                  "beaconOf",
                  "forkedFrom",
                  "l2Of",
                  "shardOf",
                  "evmOf",
                  "other"
                ],
                "description": "Kind of relation"
              },
              "network": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$",
                "description": "Id of the related network, i.e. mainnet, near-mainnet"
              }
            },
            "required": [
              "kind",
              "network"
            ],
            "additionalProperties": false
          }
        },
        "firehose": {
          "type": "object",
          "properties": {
            "blockType": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9.]+$",
              "description": "Block type, i.e. sf.ethereum.type.v2.Block"
            },
            "bytesEncoding": {
              "type": "string",
              "enum": [
                "hex",
                "0xhex",
                "base58"
              ],
              "description": "Bytes encoding, i.e. hex, 0xhex, base58"
            },
            "bufUrl": {
              "type": "string",
              "format": "uri",
              "description": "Protobuf definitions on buf.build, i.e. https://buf.build/streamingfast/firehose-ethereum"
            },
            "evmExtendedModel": {
              "type": "boolean",
              "description": "[optional] Whether supports extended block model if EVM chain"
            }
          },
          "required": [
            "blockType",
            "bytesEncoding",
            "bufUrl"
          ],
          "additionalProperties": false,
          "description": "Firehose block information"
        },
        "genesis": {
          "type": "object",
          "properties": {
            "hash": {
              "type": "string",
              "description": "Hash of the genesis block either in 0x-prefixed hex or base58",
              "pattern": "^(0x[a-fA-F0-9]+|[1-9A-HJ-NP-Za-km-z]+)$"
            },
            "height": {
              "type": "integer",
              "description": "Block height of the genesis or the first available block",
              "minimum": 0
            }
          },
          "required": [
            "hash",
            "height"
          ],
          "additionalProperties": false
        },
        "nativeToken": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9]+$",
          "description": "Symbol of the native token"
        },
        "graphNode": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "enum": [
                "ethereum",
                "near",
                "arweave",
                "cosmos",
                "starknet"
              ],
              "description": "[optional] Protocol name in graph-node, i.e. ethereum, near, arweave"
            }
          }
        },
        "explorerUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "URLs for the block explorers"
        },
        "support": {
          "type": "object",
          "properties": {
            "subgraphs": {
              "type": "array",
              "items": { "$ref": "#/$defs/Network/$defs/Service" }
            },
            "sps": {
              "type": "array",
              "items": { "$ref": "#/$defs/Network/$defs/Service" }
            },
            "firehose": {
              "type": "array",
              "items": { "$ref": "#/$defs/Network/$defs/Service" }
            },
            "substreams": {
              "type": "array",
              "items": { "$ref": "#/$defs/Network/$defs/Service" }
            }
          },
          "description": "Providers support for the chain by providers"
        },
        "issuanceRewards": {
          "type": "boolean",
          "description": "Issuance rewards on the Graph Network for this chain"
        },
        "web3Icon": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "rpcUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri-template"
          },
          "description": "List of RPC URLs for the chain. Use {CUSTOM_API_KEY} as a placeholder for a private API key"
        },
        "apiUrls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri-template"
              },
              "kind": {
                "type": "string",
                "enum": [
                  "etherscan",
                  "blockscout",
                  "ethplorer",
                  "subscan",
                  "other"
                ]
              }
            },
            "required": [
              "url",
              "kind"
            ],
            "additionalProperties": false
          },
          "description": "List of API URLs for the chain, i.e. https://api.etherscan.io/api. Use {CUSTOM_API_KEY} as a placeholder for a private API key"
        },
        "docsUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to the chain documentation"
        },
        "indexerDocsUrls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "url"
              },
              "kind": {
                "type": "string",
                "enum": [
                  "rpc",
                  "firehose",
                  "other"
                ]
              },
              "hint": {
                "type": "string"
              }
            },
            "required": [
              "url",
              "kind"
            ],
            "additionalProperties": false
          },
          "description": "Documentation to run indexer components for the chain"
        }
      },
      "required": [
        "id",
        "caip2Id",
        "shortName",
        "fullName",
        "networkType",
        "support",
        "issuanceRewards"
      ],
      "additionalProperties": false,
      "$defs": {
        "Service": {
          "type": "object",
          "properties": {
            "provider": {
              "type": "string",
              "enum": [
                "e&n",
                "pinax",
                "graphops",
                "streamingfast",
                "messari",
                "semiotic"
              ]
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["provider"],
          "additionalProperties": false
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "caip2Id": {
                "type": "string",
                "pattern": "^eip155:"
              }
            }
          },
          "then": {
            "properties": {
              "firehose": {
                "type": "object",
                "properties": {
                  "evmExtendedModel": {
                    "type": "boolean"
                  }
                },
                "required": ["evmExtendedModel"]
              },
              "graphNode": {
                "type": "object",
                "properties": {
                  "protocol": {
                    "const": "ethereum"
                  }
                }
              }
            }
          },
          "else": {
            "properties": {
              "firehose": {
                "type": "object",
                "properties": {
                  "evmExtendedModel": {
                    "const": false,
                    "description": "evmExtendedModel makes no sense for non-EVM chains"
                  }
                }
              },
              "graphNode": {
                "type": "object",
                "properties": {
                  "protocol": {
                    "anyOf": [
                      { "not": { "const": "ethereum" } },
                      { "type": "null" }],
                    "description": "protocol must be non-ethereum or undefined for non-EVM chains"
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}
